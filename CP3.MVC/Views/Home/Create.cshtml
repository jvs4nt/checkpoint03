@model CP3.MVC.Application.Dtos.BarcoDto

@{
    ViewData["Title"] = "Adicionar Barco";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Modelo">Modelo</label>
        <input type="text" class="form-control" id="Modelo" name="Modelo" value="@Model.Modelo" required />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Ano">Ano</label>
        <input type="number" class="form-control" id="Ano" name="Ano" value="@Model.Ano" required />
        <span asp-validation-for="Ano" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Tamanho">Tamanho</label>
        <input type="number" step="0.01" class="form-control" id="Tamanho" name="Tamanho" value="@Model.Tamanho" required />
        <span asp-validation-for="Tamanho" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Barco")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}